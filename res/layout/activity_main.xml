<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tvPrixFAI"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:labelFor="@+id/valuePrixFAI"
                android:text="Prix FAI : " />

            <EditText
                android:id="@+id/valuePrixFAI"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="numberDecimal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tvTravaux"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:labelFor="@+id/valueTravaux"
                android:text="Travaux" />

            <EditText
                android:id="@+id/valueTravaux"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="numberDecimal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tvAmenagement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:labelFor="@+id/valueAmenagement"
                android:text="Amenagement" />

            <EditText
                android:id="@+id/valueAmenagement"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="numberDecimal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tvAutresFrais"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Autres frais" />

            <EditText
                android:id="@+id/valueAutresFrais"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="numberDecimal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tvApport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:labelFor="@+id/valueApport"
                android:text="Apport" />

            <EditText
                android:id="@+id/valueApport"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="numberDecimal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tvDureeCredit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DurÃ©e credit" />

            <EditText
                android:id="@+id/valueDureeCredit"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="numberDecimal" />
        </LinearLayout>

        <CheckBox
            android:id="@+id/valueConseil"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="Conseil" />

        <Button
            android:id="@+id/btn_test"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="Bouton de test" />

        <TextView
            android:id="@+id/text_result"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Appuyer sur le bouton" />
    </LinearLayout>

</ScrollView>